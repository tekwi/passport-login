	<script type="text/javascript">
	
		var modal_alert = function() {
			$("#alertModal .modal-header .modal-title").text(arguments[0]);
			$("#alertModal .modal-body").text(arguments[1]);

			$("#alertModal").modal('show');
		};

		var modal_confirm = function(title, message, buttons, next) {
			$("#alertModal .modal-header .modal-title").text(arguments[0]);
			$("#alertModal .modal-body").html(arguments[1]);
			if(buttons.yes) {
				$("#alertModal .modal-footer .btn-ok").attr("class", buttons.class + " btn btn-ok");
			}
			$("#alertModal .modal-footer .btn-ok").text(buttons.yes);
			$("#alertModal").modal('show');
	        $(".btn-default").unbind().click(function() {
            	if (next) 
            		next(false);
        	});
	        $(".btn-ok").unbind().click(function () {
	        	if (next)
	        		next(true);
	        });
		}
		
	</script>
