extends ./cover_layout.jade

block content
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h3.masthead-brand Project-M
              nav
                ul.nav.masthead-nav
                  li.active
                    a(href='#') Home
                  li
                    a(href='#') Contact
          .inner.cover
            h1.cover-heading Welcome to Project-M
            p.lead
              | You must enter a valid device serial number to be able to create an account
            form.form-signin(action='/register', method='POST')
              div.form-group
                label.sr-only(for='inputSerial') Serial number
                input#inputSerial.form-control(type='text', name='serial', placeholder='Serial number', required='', autofocus='')
              div.form-group
                label.sr-only(for='inputFirstName') First name
                input#inputFirstName.form-control(type='text', name='firstName', placeholder='First name', required='', autofocus='')
              div.form-group
                label.sr-only(for='inputLastName') Last name
                input#inputLastName.form-control(type='text', name='lastName', placeholder='Last name', required='', autofocus='')
              div.form-group  
                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')
              div.form-group  
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
              div.form-group  
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Create account
          .mastfoot
            .inner
              p
                | Cover template for 
                a(href='http://getbootstrap.com') Bootstrap
                | , by 
                a(href='https://twitter.com/mdo') @mdo
                | .
